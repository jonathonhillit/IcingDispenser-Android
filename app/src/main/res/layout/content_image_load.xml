<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.aut.engineering.icingprinter.Draw"
    android:background="#555555">

    <!-- Layout Items for Drawing -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="50dp"
        android:background="#555555"
        >

        <ImageButton
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/save"
            android:src="@drawable/delete"
            android:background="#555555"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/add_btn"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/print"
            android:src="@drawable/add"
            android:background="#555555"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#555555"
        >

        <ImageButton
            android:id="@+id/crop_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/save"
            android:src="@drawable/crop"
            android:background="#555555"
            android:padding="10dp"
            android:layout_gravity="left" />

        <ImageButton
            android:id="@+id/resize_btn"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/print"
            android:src="@drawable/resize"
            android:background="#555555"
            android:layout_gravity="left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Accept"
            android:id="@+id/accept"
            android:layout_marginLeft="100dp"
            android:enabled="false" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />
    <!-- End Drawing icons -->

    <!-- Custom Drawing View

    <nz.ac.aut.engineering.icingprinter.DrawingView
        android:layout_width="match_parent"
        android:id="@+id/imagedrawing"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"

        android:background="#000000" />
     End Custom Drawing View -->


</LinearLayout>
